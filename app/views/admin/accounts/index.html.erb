<div class="row page-title-header">
              <div class="col-12">
                <div class="page-header">
                  <h4 class="page-title">Accounts</h4>
                  
                </div>
              </div>
            </div>
<div class="row">
<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                  <%= search_form_for [:admin, @q] do |f| %>
                    <div class="row">
                    <div class="col-md-8">
                        <%= f.search_field :customer_email_cont, class: "form-control" %>
                    </div>
                    <div class="col-md-4">
                        <%= f.submit  "Filter", class: "btn btn-primary" %>
                    </div></div>
            
                        <% end %>                  </div>
                </div>
            </div>
              
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Accounts</h4>
                    <p class="card-description"></p>
                    <table class="table table-striped">
            <thead>
                <tr>
                    <td>Customer</td>
                    <td>Plan</td>
                    <td>Purchased Date</td>
                    <td>Remaining Days</td>
                    <td>Due Date</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <% @accounts.each do |account| %>
                    <tr>
                        <td><%=account.customer.email %></td>
                        <td>
                        <span class="badge badge-info h6"><%= account.plan.name %></div></td>
                        <td><%= account.created_at.strftime("%F") %></td>
                        <td>
                        <div class="progress">
                              <div class="progress-bar bg-success" role="progressbar" style="width: <%=(account.due_date.to_date - Date.today).to_i%>%" aria-valuenow="<%=(account.due_date.to_date - Date.today).to_i%>" aria-valuemin="0" aria-valuemax="<%=(account.due_date.to_date - account.created_at.to_date).to_i%>"></div>
                            </div>
                        </td>
                        <td><%= account.due_date.strftime("%F") %></td>
                        <td><a href="/admin/accounts/<%=account.id%>" class="btn btn-dark">
                            <i class="fa fa-arrow-right"></i>
                        </a></td>
                    </tr>
    
                <% end %>
            </tbody>
        </table> 

        <nav aria-label="Page navigation example">

<%= will_paginate @accounts %>
</nav>
                  </div>
                </div>
              </div>
            </div>   
   

    