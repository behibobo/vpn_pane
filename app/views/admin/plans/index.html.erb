<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table class="table tabel-striped ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Interval</th>
      <th># of Accounts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.price %></td>
        <td><%= plan.interval %></td>
        <td><%= plan.accounts.count %></td>
        <td><%= link_to 'Show', admin_plan_path(plan) %></td>
        <td><%= link_to 'Edit', edit_admin_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', [:admin, plan], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_admin_plan_path, class: "btn btn-primary" %>
