
<div class="row">
    <div class="col-md-12">
        <div>Email: <%= @customer.email %></div>
        <div>Phone: <%= @customer.phone %></div>
    </div>
</div>
<hr />
<div class="row mt-5">
    <div class="col-md-12">
        <div class="h5">Purchased Accounts</div>
    </div>
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Customer</td>
                    <td>Plan</td>
                    <td>AccId</td>
                    <td>Purchased Date</td>
                    <td>Due Date</td>
                </tr>
            </thead>
            <tbody>
                <% @customer.accounts.order(created_at: :desc).each do |account| %>
                    <tr>
                        <td><%= account.customer.email %></td>
                        <td><%= account.plan.name %></td>
                        <td><%= account.acc_id %></td>
                        <td><%= account.created_at.strftime("%F") %></td>
                        <td><%= account.due_date.strftime("%F") %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>   
    </div>
</div>